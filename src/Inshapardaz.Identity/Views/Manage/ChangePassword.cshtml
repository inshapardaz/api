@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<form asp-controller="Manage" asp-action="ChangePassword" 
      method="post" class="js-validation-login form-horizontal push-30-t">
    <div class="form-group">
        <div class="col-xs-12">
            <div class="form-material form-material-primary floating">
                @Html.PasswordFor(model => model.OldPassword, new { id = "OldPassword", @class = "form-control" })
                @Html.LabelFor(model => model.OldPassword)
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-xs-12">
            <div class="form-material form-material-primary floating">
                @Html.PasswordFor(model => model.NewPassword, new { id = "NewPassword", @class = "form-control" })
                @Html.LabelFor(model => model.NewPassword)
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-xs-12">
            <div class="form-material form-material-primary floating">
                @Html.PasswordFor(model => model.ConfirmPassword, new { id = "ConfirmPassword", @class = "form-control" })
                @Html.LabelFor(model => model.ConfirmPassword)
            </div>
        </div>
    </div>
    
    @if (ViewData?.ModelState[""]?.Errors?.Any() == true)
    {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <p>
                @foreach (var error in ViewData.ModelState[""].Errors)
                {
                    WriteLiteral(error.ErrorMessage);
                    <br/>
                }
            </p>
        </div>
    }
    
    <div class="form-group push-30-t">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <button class="btn btn-primary" type="submit">Change password</button>
        </div>
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <a class="btn btn-default" asp-action="Index" asp-controller="Home" >Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/assets/js/pages/base_pages_changePassword.js"></script>
}
